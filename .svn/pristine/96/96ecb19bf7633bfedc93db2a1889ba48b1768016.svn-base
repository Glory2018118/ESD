/*variable*/
:root {
    --myTextCol: #13ad57;
    --myOriginText : #2F4F4F;
}

/*for text*/

.myText{
    color :  var(--myTextCol) !important;
}

.normalText{
    color : var(--myOriginText) !important;
}
.normalTextNotImp{
    color : var(--myOriginText) !important;
}
.normalText a{
    color : var(--myOriginText) !important;
}
.signUpButton{
    background : var(--myTextCol);
    color : white;
}

.card {
    margin : 20px !important;
}

.card-body{
    color : var(--myOriginText) !important;
}



.textSize16{
    font-size : 16px;
}
.textRed{
    color : red;
}

/*for hr*/

.kt-datatable > .kt-datatable__table > .kt-datatable__head .kt-datatable__row{
    /*color : red;*/
    border-bottom-color: var(--myTextCol);
    border-bottom-width: 7px;
}

.tableHeadHr{

    display: block;
    margin-left: auto;
    margin-right: auto;
    border-style: inset;
    border-width: 3px;
    color : green;

}
/*for navvar*/


.myNavBg{
    background-color: white;
}

.navHeadItem{
    color : var(--myTextCol);
    font-size : 16px;
    font-family: Constantia;
    padding: 2px;
}

nav li:hover{
    text-decoration: underline;

}

nav a:hover{
    color : var(--myTextCol);
}

nav > ul > li > div > .dropdown-item:hover{
    color : var(--myTextCol);
    text-decoration: underline;
}

nav > ul > li > div > a:hover{
    text-decoration: underline !important;
}


.userNavItem:hover{
    color : var(--myTextCol) !important;
    text-decoration: underline;
}

.userNav{
    padding : 5px;
    margin : 5px;
}

